<h1>Chỉnh sửa</h1>
<form class="mb-4" method="post">
    <div class="mb-4">
        <label for="name" class="mb-2">Name</label>
        <input type="text" name="name" id="name" class="form-control" placeholder="Your Name..."
            value="<%= req?.olds?.name %>">
        <span class="mt-2 text-danger">
            <%= req?.errors?.name %>
        </span>
    </div>
    <div class="mb-4">
        <label for="email" class="mb-2">Email</label>
        <input type="text" name="email" id="email" class="form-control" placeholder="Your Email..."
            value="<%= req?.olds?.email %>">
        <span class="mt-2 text-danger">
            <%= req?.errors?.email %>
        </span>
    </div>
    <div class="mb-4">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Your Password...">
        <span class="mt-2 text-danger">
            <%= req?.errors?.password %>
        </span>
    </div>
    <div class="mb-4">
        <label for="status" class="mb-2">Status</label>
        <select id="status" name="status" class="form-select">
            <option value="1" <%=+req?.olds?.status===1 ? 'selected' : "" %>>Active</option>
            <option value="0" <%=+req?.olds?.status===0 ? 'selected' : "" %>>Inactive</option>
        </select>
        <span class="mt-2 text-danger">
            <%= req?.errors?.status %>
        </span>
    </div>
    <button class="btn btn-primary">Thay đổi</button>
    <a href="/users" class="btn btn-danger">Thui</a>
</form>